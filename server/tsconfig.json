{
  "compilerOptions": {
    "target": "es2020", // Specifies ECMAScript target version
    "module": "commonjs", // Module system for Node.js
    "strict": true, // Enables all strict type-checking options
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "skipLibCheck": true, // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforces consistent casing in file names
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of input files
    "resolveJsonModule": true // Allows importing JSON files
  },
  "include": ["src/**/*.ts"], // Includes all TypeScript files in the src directory
  "exclude": ["node_modules"] // Excludes the node_modules directory
}
